#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// Set the LCD address to 0x27 in PCF8574 by NXP and Set to 0x3F in PCF8574A by Ti
LiquidCrystal_I2C lcd(0x27, 20, 4); //กำหนด Address ของจอให้ตรงรุ่น สำหรับจอ LCD ที่โค๊ดนี้ใช้เป็นเกณฑ์คือ จอ 20 คอร์ลัม 4 แถว

//สร้างตัวเก็บข้อมูลของตัวอักษรและสัญลักษณ์ทีละตัว
byte customChar[] = { // d
  B00000,
  B00000,
  B00000,
  B11111,
  B10001,
  B11101,
  B10101,
  B11001
};
byte customChar1[] = { // z
  B00000,
  B00001,
  B11010,
  B11110,
  B01001,
  B01001,
  B01001,
  B01111
};
byte customChar2[] = { // T
  B00010,
  B01110,
  B00111,
  B01000,
  B01110,
  B00001,
  B01001,
  B01111
};
byte customChar3[] = { // ra
  B00000,
  B00000,
  B00010,
  B00100,
  B01110,
  B00010,
  B00110,
  B00110
};
byte customChar4[] = { // ph
  B00000,
  B00000,
  B00110,
  B01001,
  B11001,
  B01001,
  B01001,
  B11001
};
byte customChar5[] = { // p
  B00000,
  B00000,
  B00000,
  B10101,
  B10101,
  B10101,
  B11011,
  B10001
};
void setup() {
  pinMode(A2, INPUT_PULLUP);
  pinMode(A3, OUTPUT);
  lcd.begin(16,4);
  lcd.backlight();

  
  //นำตัวเก็บข้อมูลอักษรมาเปลี่ยนเป็นตัวแปรตามลำดับ
  lcd.createChar(0, customChar); //ตัวแปร 0 สร้างอักษรลำดับที่ 1 โดยมี customChar เป็นตัวอย่าง
  lcd.createChar(1, customChar1); //ตัวแปร 1 สร้างอักษรลำดับที่ 2 โดยมี customChar1 เป็นตัวอย่าง
  lcd.createChar(2, customChar2);
  lcd.createChar(3, customChar3);
  lcd.createChar(4, customChar4);
  lcd.createChar(5, customChar5);

  //สร้างและแสดงผลตัวอักษรภาษาไทย
  lcd.setCursor(3, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 3 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)0); //สร้างตัวอักษรขึ้นมาโดยใช้อักษรจาก customChar(ตามที่กำหนดในโค๊ด [lcd.createChar(0, customChar);] ดังนั้น 0 จึงเท่ากับ customChar)
  lcd.setCursor(4, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 4 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)1); //สร้างตัวอักษรขึ้นมาโดยใช้อักษรจาก customChar1(ตามที่กำหนดในโค๊ด [lcd.createChar(1, customChar1);] ดังนั้น 1 จึงเท่ากับ customChar)
  lcd.setCursor(6, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 5 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)2);
  lcd.setCursor(7, 0);
  lcd.write((byte)3);
  lcd.setCursor(8, 0);
  lcd.write((byte)4);
  lcd.setCursor(9, 0);
  lcd.write((byte)5);

  //สร้างกรอบหัวใจ
  //ใช้อักษรจาก customChar7 เหมือนกันทั้งหมด เพียงแต่กำหนด คอร์ลัม และ แถว ตามตำแหน่งที่ต้องการ
  //สำหรับโค๊ดนี้ใช้จอ LCD 20 คอร์ลัม 4 แถว เป็นเกณฑ์ หากผู้ใช้งานต้องการนำโค๊ดนี้ไปใช้งานร่วมกับจอรุ่นอื่น ผู้ใช้งานจำเป็นที่จะต้องแกโค๊ดเพิ่มเติมด้วยตัวเอง


  //สร้างชุดประโยคตัวอักษรโดยใช้คำสั่ง print
  //สำหรับการใช้งานในส่วนคำสั่ง print เพื่อสร้างชุดประโยคตัวอักษร ผู้ใช้งานจะสามารถสร้างได้เพียงชุดตัวอักษรภาษาอังกฤษ และตัวเลขเท่านั้น
  lcd.setCursor(13, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 13 แถวที่ 1 ( 0 = 1) โดยในตำแหน่งจะเป็นตำแหน่งที่อยู่ต่อจากอักษรภาษาไทยตัวสุดท้ายในแถวแรก
  lcd.print("2007"); //สร้างชุดประโยคเป็นตัวเลข 2565 ขึ้นมา หากผุ้ใช้งานต้องการแก้ไขชุดประโยคก็สามารถเปลี่ยนชุดตัวเลข 2565 เป็นชุดประโยคอื่นๆได้
  lcd.setCursor(1, 2);
  lcd.print(" by CyberTice.com");
}
void loop()
{
  if(digitalRead(A2) ==0)
    {
    digitalWrite(A3, 0);
    lcd.clear();
    delay(300);
    lcd.setCursor(0, 0);
    lcd.print(" NKCC ");//ชื่อตัวเอง
    lcd.setCursor(0, 1);
        lcd.print(" ELECTRONICS ");//ชื่อตัวเอง
    delay(3000);//ค้าง3วิ
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print(" Present");//ข้อความค้าง
     lcd.setCursor(0, 1);
     lcd.print(" by tiraphob");//ข้อความค้าง
    delay(3000);
    lcd.clear();
    }
  lcd.createChar(0, customChar); //ตัวแปร 0 สร้างอักษรลำดับที่ 1 โดยมี customChar เป็นตัวอย่าง
  lcd.createChar(1, customChar1); //ตัวแปร 1 สร้างอักษรลำดับที่ 2 โดยมี customChar1 เป็นตัวอย่าง
  lcd.createChar(2, customChar2);
  lcd.createChar(3, customChar3);
  lcd.createChar(4, customChar4);
  lcd.createChar(5, customChar5);

  //สร้างและแสดงผลตัวอักษรภาษาไทย
  lcd.setCursor(3, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 3 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)0); //สร้างตัวอักษรขึ้นมาโดยใช้อักษรจาก customChar(ตามที่กำหนดในโค๊ด [lcd.createChar(0, customChar);] ดังนั้น 0 จึงเท่ากับ customChar)
  lcd.setCursor(4, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 4 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)1); //สร้างตัวอักษรขึ้นมาโดยใช้อักษรจาก customChar1(ตามที่กำหนดในโค๊ด [lcd.createChar(1, customChar1);] ดังนั้น 1 จึงเท่ากับ customChar)
  lcd.setCursor(6, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 5 แถวที่ 1 ( 0 = 1)
  lcd.write((byte)2);
  lcd.setCursor(7, 0);
  lcd.write((byte)3);
  lcd.setCursor(8, 0);
  lcd.write((byte)4);
  lcd.setCursor(9, 0);
  lcd.write((byte)5);

  //สร้างกรอบหัวใจ
  //ใช้อักษรจาก customChar7 เหมือนกันทั้งหมด เพียงแต่กำหนด คอร์ลัม และ แถว ตามตำแหน่งที่ต้องการ
  //สำหรับโค๊ดนี้ใช้จอ LCD 20 คอร์ลัม 4 แถว เป็นเกณฑ์ หากผู้ใช้งานต้องการนำโค๊ดนี้ไปใช้งานร่วมกับจอรุ่นอื่น ผู้ใช้งานจำเป็นที่จะต้องแกโค๊ดเพิ่มเติมด้วยตัวเอง


  //สร้างชุดประโยคตัวอักษรโดยใช้คำสั่ง print
  //สำหรับการใช้งานในส่วนคำสั่ง print เพื่อสร้างชุดประโยคตัวอักษร ผู้ใช้งานจะสามารถสร้างได้เพียงชุดตัวอักษรภาษาอังกฤษ และตัวเลขเท่านั้น
  lcd.setCursor(13, 0); //กำหนดตำแหน่งการสร้างตัวอักษร โดยสร้างให้อยู่ในคอร์ลัมที่ 13 แถวที่ 1 ( 0 = 1) โดยในตำแหน่งจะเป็นตำแหน่งที่อยู่ต่อจากอักษรภาษาไทยตัวสุดท้ายในแถวแรก
  lcd.print("2007"); //สร้างชุดประโยคเป็นตัวเลข 2565 ขึ้นมา หากผุ้ใช้งานต้องการแก้ไขชุดประโยคก็สามารถเปลี่ยนชุดตัวเลข 2565 เป็นชุดประโยคอื่นๆได้
  lcd.setCursor(1, 2);
  lcd.print("by CyberTice .com");
}
