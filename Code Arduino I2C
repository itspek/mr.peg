int sw = A2;
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 16, 2);
void setup()
{
  pinMode(sw, INPUT_PULLUP);
  pinMode(6, OUTPUT);
  lcd.begin(16,2);
  lcd.backlight();
  lcd.print(" TEXT ");//ข้อความค้าง
  lcd.setCursor(0, 0);
}
void loop()
{
  if(digitalRead(sw) ==0)
    {
    digitalWrite(A5, LOW);
    lcd.clear();
    delay(300);
    lcd.setCursor(0, 0);
    lcd.print("  NAME ");//ชื่อตัวเอง
    delay(3000);//ค้าง3วิ
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print(" TEXT ");//ข้อความค้าง
    }
}
